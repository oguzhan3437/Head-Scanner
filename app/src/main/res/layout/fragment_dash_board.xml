<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context=".fragment.DashBoardFragment">

    <!--    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_tips"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:layout_gravity="top"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:elevation="3dp"
            tools:listitem="@layout/card_tip" />-->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:shapeAppearance="@style/ShapeAppearance.PostureApp.Shape1"
        android:backgroundTint="@color/primary"
        style="@style/ShapeAppearance.PostureApp.Shape1"

        ></com.google.android.material.card.MaterialCardView>

    <!--TODO:must be replace with RC-->
    <ImageView
        android:id="@+id/rc_tips"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="top"
        android:layout_marginHorizontal="18dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:src="@drawable/tips1" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:backgroundTint="@color/background">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_view_camera"

                style="@style/ShapeAppearance.PostureApp.MediumComponent"
                android:layout_width="174dp"
                android:layout_height="157dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/image_view_exercise"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearance.PostureApp.MediumComponent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/camera"
                    android:src="@drawable/camera_icon" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_view_gallery"
                style="@style/ShapeAppearance.PostureApp.MediumComponent"
                android:layout_width="178dp"
                android:layout_height="156dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_records"
                app:layout_constraintTop_toBottomOf="@+id/image_view_exercise"
                app:shapeAppearance="@style/ShapeAppearance.PostureApp.MediumComponent">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/gallery"
                    android:src="@drawable/gallery_icon2" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_view_records"
                style="@style/ShapeAppearance.PostureApp.MediumComponent"
                android:layout_width="178dp"
                android:layout_height="156dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/image_view_gallery"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_camera"
                app:shapeAppearance="@style/ShapeAppearance.PostureApp.MediumComponent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/records"
                    android:src="@drawable/ic_plan" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_view_exercise"
                style="@style/ShapeAppearance.PostureApp.MediumComponent"
                android:layout_width="178dp"
                android:layout_height="156dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_camera"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearance.PostureApp.MediumComponent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/exercises"
                    android:src="@drawable/exercises" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="392dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8032407" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</FrameLayout>